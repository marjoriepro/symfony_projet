{% extends 'front/base.html.twig' %}

{% block main %}
    <div class="container">
        <img src="{{ asset('media/' ~  licence.media ) }}" alt="">
        <h1>
            {{ licence.name }}
        </h1>
        <h2>
            {{ licence.description }}
        </h2>
    </div>
    <div class="container">
        {% for product  in licence.products %}
            <div class="card">
                <a href="{{ path('show_product', {'id' : product.id}) }}"><img src="{{ asset('media/' ~ product.media[0].src) }}" alt="{{ product.media[0].alt }}" class="w60"></a>
                <h3><a href="{{ path('show_product', {'id' : product.id}) }}">{{ product.name }}</a></h3>
            </div>
        {% endfor %}
    </div>
{% endblock %}