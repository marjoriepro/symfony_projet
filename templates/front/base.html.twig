<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="author" content="Nicolas SAMPAIO">
		<meta name="description" content="Site de e-commerce sur le super-héros">
		<meta name="keywords" content="super-héros, superman, batman, jouets, jeux vidéos, statuette">
		<link rel="stylesheet" href="{{ asset('style.css') }}">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css">

		<title>
			{% block metaTitle %}{% endblock metaTitle %}
		</title>

	</head>
	<body>

		<header>
			<nav>
				<ul class="menu">
					<li>
						<a href="{{ path('front_home') }}">
							Accueil</a>
					</li>
					<li>
						<a href="{{ path('list_category') }}">Catégories</a>
					</li>
					<li>
						<a href="{{ path('list_licence') }}">Licences</a>
					</li>
					<li>
						<a href="{{ path('list_product') }}">Produits</a>
					</li>
					<li>
						<a href="{{ path('app_login') }}">
							{% if app.user %}
								{{app.user.email}}
							{% endif %}
							{% if app.user is null %}
								Se connecter/S'inscrire
							{% endif %}
						</a>
					</li>
					<li>
						<form action="{{ path('front_search') }}" method="get">
							<input type="search" name="term" id="">
							<input type="submit" value="Rechercher">
						</form>
					</li>
				</ul>
			</nav>
		</header>

		<main>

			{% block main %}{% endblock main %}

		</main>

		<footer>
			<div class="footer">
				<div>
					<ul>
						<li><a href="">Informations</a></li>
						<li><a href="">Carrieres</a></li>
						<li><a href="">Contact</a></li>
					</ul>
				</div>
				<div class="up">
					<a href="#top">Retour en haut</a>
				</div>
				<div class="reseaux">
					<ul>
						<li><a href=""><i class="fab fa-facebook"></i></a></li>
						<li><a href=""><i class="fab fa-instagram"></i></a></li>
						<li><a href=""><i class="fab fa-twitter"></i></a></li>
					</ul>
				</div>
			</div>
		</footer>
	</body>
</html>
