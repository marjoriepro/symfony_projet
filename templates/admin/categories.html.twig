{% extends 'admin/base.html.twig' %}

{% block main %}


 <div class="add-product">
        <a href="{{ path('admin_add_category') }}" class="add">Ajouter une catégorie</a>
    </div>

    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        {% for category in categories %}
            <div class="card br">

             <h1> {{category.name}}</h1>
                <img src="{{ asset('media/' ~ category.media) }}">
                <h2>
                    {{ category.description }}
                </h2>
                <a href="{{ path('admin_delete_category', {'id' : category.id} ) }}" class="delete">Supprimer la catégorie</a>
                <a href="{{ path('admin_update_category', {'id' : category.id} ) }}" class="update">Modifier la catégorie</a>
            </div>
        {% endfor %}

    </div>

   
{% endblock %}